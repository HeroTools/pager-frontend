{
  "name": "pager",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "homepage": "./",
  "author": {
    "name": "Pager",
    "email": "support@pager.team",
    "url": "https://pager.team"
  },
  "description": "AI first chat collaboration platform",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "cross-env ELECTRON=true next dev",
    "build": "cross-env ELECTRON=true next build",
    "start": "next start",
    "lint": "eslint --cache --cache-location .next/cache/eslint/",
    "lint:fix": "eslint --fix --cache --cache-location .next/cache/eslint/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "check-all": "npm run lint && npm run format:check && npm run type-check",
    "fix-all": "npm run lint:fix && npm run format",
    "clean": "rm -rf .next && rm -rf node_modules/.cache && rm -rf dist && rm -rf electron-dist",
    "clean:sharp": "node scripts/clean-sharp.js",
    "build:analyze": "ANALYZE=true npm run build",
    "electron": "node scripts/start-electron.js",
    "electron:dev": "npm run electron",
    "build:electron": "npm run build && npm run setup:standalone && npm run compile:electron",
    "setup:standalone": "node scripts/setup-standalone.js",
    "compile:electron": "tsc --project electron/tsconfig.json",
    "dist": "npm run clean:sharp && npm run build:electron && electron-builder",
    "dist:mac": "npm run clean:sharp && npm run build:electron && electron-builder --mac",
    "dist:win": "npm run clean:sharp && npm run build:electron && electron-builder --win",
    "dist:linux": "npm run clean:sharp && npm run build:electron && electron-builder --linux",
    "pack": "npm run clean:sharp && npm run build:electron && electron-builder --dir"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.83.0",
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "electron-is-dev": "^3.0.1",
    "emoji-mart": "^5.6.0",
    "highlight.js": "^11.11.1",
    "html-react-parser": "^5.2.5",
    "lucide-react": "^0.539.0",
    "marked": "^16.1.1",
    "next": "^15.4.2",
    "next-themes": "^0.4.6",
    "quill": "^2.0.3",
    "quill-delta-to-html": "^0.12.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-resizable-panels": "^3.0.3",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.5",
    "uuid": "^11.1.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@next/eslint-plugin-next": "^15.4.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/parser": "^8.37.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.4.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5",
    "typescript-eslint": "^8.37.0",
    "wait-on": "^8.0.4"
  },
  "overrides": {
    "@emoji-mart/react": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    }
  },
  "build": {
    "appId": "team.pager.app",
    "productName": "Pager",
    "directories": {
      "output": "electron-dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!node_modules/@img/**",
      "!node_modules/sharp/**",
      "!**/sharp-*/**",
      "!**/@img/**",
      "!**/node_modules/@img/**",
      "!**/node_modules/sharp/**"
    ],
    "asarUnpack": [
      "**/.next/**/*",
      "**/public/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "app/public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "public/desktop-platform-icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert",
        "LSUIElement": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Pager Protocol",
            "CFBundleURLSchemes": [
              "pager"
            ]
          }
        ]
      }
    },
    "win": {
      "icon": "public/desktop-platform-icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "linux": {
      "icon": "public/desktop-platform-icons/icon.png",
      "category": "Network",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/desktop-platform-icons/icon.ico",
      "uninstallerIcon": "public/desktop-platform-icons/icon.ico",
      "installerHeaderIcon": "public/desktop-platform-icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libappindicator3-1",
        "libsecret-1-0"
      ],
      "category": "Network",
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libappindicator-gtk3",
        "libsecret"
      ]
    }
  }
}
