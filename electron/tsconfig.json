{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node", "electron"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "../node_modules", "../.next", "../dist"]
}
